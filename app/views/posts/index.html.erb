  <div class="container mx-auto flex flex-wrap py-6">

        <!-- Posts Section -->
        <section class="w-full md:w-2/3 flex flex-col items-center px-3">
        <% @posts.each_with_index do |raw_post, index| %>
            <% post = JSON.load raw_post%>
            <article class="flex flex-col shadow my-4">
                <!-- Article Image -->
                <a href="<%= detail_path(post['file_name'])%>" class="hover:opacity-75">
                    <img src="https://source.unsplash.com/collection/335434/1000x500?sig=<%= index + 1%>">
                </a>
                <div class="bg-white flex flex-col justify-start p-6">
                    <%= render(partial: 'shared/inline_tags', locals: {tags: post['tags']})%>
                    <a href="<%= detail_path(post['file_name'])%>" class="text-3xl font-bold hover:text-gray-700 pb-4"><%= post['title']%></a>
                    <p href="#" class="text-sm pb-3">
                        By <a href="#" class="font-semibold hover:text-gray-800">Ethan Han</a>, Published on <%= post['created'] %>
                    </p>
                    <a href="#" class="pb-6"><%= post['brief'] %></a>
                    <a href="<%= detail_path(post['file_name'])%>" class="uppercase text-gray-800 hover:text-black">Continue Reading <i class="fas fa-arrow-right"></i></a>
                </div>
            </article>
          <% end %>



        </section>
  <%= render('shared/sidebar')%>
</div>