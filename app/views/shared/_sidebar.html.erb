<aside class="w-full md:w-1/3 flex flex-col items-center px-3">

            <div class="w-full bg-white shadow flex flex-col my-4 p-6">
                <p class="text-xl font-semibold pb-5">About Me</p>
                <p class="pb-2">Ethan Han: A skilled full stack developer and automation tester</p>
                <a href="#" class="w-full bg-blue-800 text-white font-bold text-sm uppercase rounded hover:bg-blue-700 flex items-center justify-center px-2 py-3 mt-4">
                    Get to know me
                </a>
            </div>

            <div class="w-full bg-white shadow flex flex-col my-4 p-6">
                <p class="text-xl font-semibold pb-5">Tags</p>
                <div class="grid grid-cols-3 gap-3">
                    <% @tags.each_with_index do |tag, index| %>
                      <div class="relative">
                        <a href="<%= tag_path(tag)%>">
                          <img class="hover:opacity-75" src="https://source.unsplash.com/collection/1346951/150x150?sig=<%= index + 1%>">
                        </a>
                        <a href="<%= tag_path(tag)%>">
                          <h3 class = "absolute text-lg text-white top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 font-bold"><%= tag %></h3>
                        </a>
                      </div>
                    <%end %>
                </div>
                <a href="#" class="w-full bg-blue-800 text-white font-bold text-sm uppercase rounded hover:bg-blue-700 flex items-center justify-center px-2 py-3 mt-6">
                    <i class="fab fa-instagram mr-2"></i> Follow @twitter
                </a>
            </div>

        </aside>
